---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import { SITE } from "~/config";
import astronautImage from "~/assets/astronaut.png";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <div
      class="flex flex-col items-center gap-4 self-end px-4 sm:gap-6 sm:self-auto sm:justify-self-end sm:items-end sm:px-0"
    >
      <Icon name="logomark" class="size-16 text-white sm:size-20 md:size-24" aria-hidden="true" />
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-5xl md:text-7xl sm:text-right"
      >
        Tu web lista en poco tiempo — sin complicaciones
      </div>
      <p class="max-w-md text-center text-lg text-white/90 sm:text-right">
        Landing pages, webs corporativas y mejoras de sitios existentes. Si
        necesitas algo más complejo (paneles, SaaS), también puedo ayudarte.
      </p>
      <a
        href={SITE.whatsAppUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn border-2 border-white bg-white px-6 py-4 text-black hover:bg-white/90 hover:text-black focus:ring-white focus:ring-offset-black"
      >
        Contáctame por WhatsApp
      </a>
    </div>
    <div
      id="astronaut"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
