---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
import { SITE } from "~/config";

const features: Array<FeatureItem> = [
  {
    title: "Landing pages y webs que venden",
    description:
      "Aumenta tus clientes con una web profesional lista en días. Precio claro y entrega rápida.",
    icon: "mdi:web",
  },
  {
    title: "Mejoras y arreglos de webs",
    description:
      "Corrijo errores, mejoro velocidad y actualizo tu sitio para que siga funcionando bien.",
    icon: "mdi:tools",
  },
  {
    title: "Sistemas web y productos avanzados",
    description:
      "Haz crecer tu negocio: paneles de administración, SaaS o productos web cuando tu proyecto lo pida.",
    icon: "mdi:application-cog",
  },
];
---

<ContentSection title="Servicios" id="features">
  <Fragment slot="lead">
    Todo lo que necesitas para una web profesional, rápida y sin complicaciones: desde una{" "}
    <span class="text-primary">landing</span> hasta un{" "}
    <span class="text-primary">producto web</span> completo.
  </Fragment>
  {SITE.pricingFrom && (
    <p class="text-center text-offset text-sm">
      Proyectos {SITE.pricingFrom} — presupuesto sin compromiso.
    </p>
  )}
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
